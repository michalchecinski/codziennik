<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Codziennik.Views.NewEntryPage"
             Title = "Dodaj nowy wpis">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Spacing="10">
        <Label Text="Opowiedz o swoim dniu:" 
               FontSize="Large" 
               TextColor="Black" 
               Margin="20,20,0,0"   />
        <Editor Text="Dzisiaj zdarzyło się..." 
                VerticalOptions="FillAndExpand"
                HorizontalOptions="Fill"
                x:Name="WhatHappenedEditor" />

        <Button Text="Zapisz"
           VerticalOptions="Center"
           HorizontalOptions="Center" 
           Margin="10"
           Clicked="SaveButtonClicked" />

      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
  
</ContentPage>
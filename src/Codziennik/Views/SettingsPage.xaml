<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Codziennik.Views.SettingsPage"
             Title="Ustawienia">

    <ScrollView Margin="10,2,10,2">

        <StackLayout>
        
            <Label Text="Możesz zmienić pytania poniżej" 
                   FontSize="20" 
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <Editor x:Name="QuestionsEditor" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="Fill"
                    HeightRequest="200"
                    FontSize="15"/>

            <Button Text="Przywróć domyśle pytania" 
                    HorizontalOptions="CenterAndExpand" 
                    Margin="10,0,10,0" 
                    Clicked="RestoreDefaultQuestions" />

            <Label
                Text="Ikony wykonane przez Madebyoliver ze strony www.flaticon.com na licencji Creative Commons BY 3.0"
                TextColor="Gray"
                FontSize="10" />

        </StackLayout>
        
    </ScrollView>
</ContentPage>